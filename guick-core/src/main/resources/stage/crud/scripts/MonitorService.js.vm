'use strict';

/* Services */
angular.module('${projectBeanName}App').factory('MetricsService',function (${js}http) {
        return {
        get: function() {
            var promise = ${js}http.get('/api/metrics/metrics').then(function(response){
                return response.data;
            });
            return promise;
        }
    };
});

