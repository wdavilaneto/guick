            <serviceTask id="criarCandidato"
                         name="Incluir Candidato"
                         activiti:expression="${CandidatoService.create(nomeCandidato, descricaoCandidato)}"
                         activiti:resultVariable="result"/>

            <sequenceFlow sourceRef="criarCandidato" targetRef="avaliarInclusaoCandidato"/>

            <userTask id="avaliarInclusaoCandidato" name="Avaliar InclusÃ£o de Candidato"/>

            <sequenceFlow sourceRef="avaliarInclusaoCandidato" targetRef="finalizarProcessoCandidato"/>

